	<makesSickThought>false</makesSickThought>
	<tendable>false</tendable>
    <description>This yinglet is afflicted by being a yinglet, resulting in altered sleep patterns and hyperactivity.</description>
    <stages>
	  <li>
	  	<minSeverity>0.5</minSeverity>
		<label>so SO yinglet</label>
		<restFallFactor>2</restFallFactor>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>0.15</offset>
          </li>
          <li>
            <capacity>Talking</capacity>
            <offset>-0.3</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>  
  <HediffDef ParentName="ChronicDiseaseBase">
