	<makesSickThought>false</makesSickThought>
	<tendable>false</tendable>
    <description>Becoming a yinglet!</description>
	<hediffClass>Shelltooth.Hediff_Yingify</hediffClass>
    <stages>
	  <li>
	  	<minSeverity>0.5</minSeverity>
		<label>so SO yinglet</label>
		<restFallFactor>3.5</restFallFactor>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>0.10</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.10</offset>
          </li>
          <li>
            <capacity>Talking</capacity>
            <offset>-0.3</offset>
          </li>
        </capMods>
      </li>
    </stages>
