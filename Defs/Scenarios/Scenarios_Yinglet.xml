<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ScenarioDef>
		<defName>Yinglets</defName>
		<label>Yinglets</label>
		<description>Five Yinglets set out to create a new enclave. Let's hope they don't set it on fire.</description>

		<scenario>
			<summary>Five cute Yinglets, a new derpy life.</summary>
			<playerFaction>
				<def>PlayerFaction</def>
				<factionDef>YingletPlayerColony</factionDef>
			</playerFaction>
			<parts>

				<!-- Config pages -->
				<li Class="ScenPart_ConfigPage_ConfigureStartingPawns">
					<def>ConfigPage_ConfigureStartingPawns</def>
					<pawnCount>5</pawnCount>
					<pawnChoiceCount>8</pawnChoiceCount>
				</li>

				<!-- Player starting stuff spawn method-->
				<li Class="ScenPart_PlayerPawnsArriveMethod">
					<def>PlayerPawnsArriveMethod</def>
					<method>Standing</method>
					<visible>false</visible>
				</li>

				<!-- Player starting things -->
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Silver</thingDef>
					<count>900</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>MealSurvivalPack</thingDef>
					<count>42</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>MedicineHerbal</thingDef>
					<count>35</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>ComponentIndustrial</thingDef>
					<count>30</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Bow_Great</thingDef> <!-- should be a spear??-->
					<count>4</count>
				</li>

				<!-- Scatter some things near player start -->
				<li Class="ScenPart_ScatterThingsNearPlayerStart">
					<def>ScatterThingsNearPlayerStart</def>
					<thingDef>Steel</thingDef>
					<count>500</count>
				</li>
				<li Class="ScenPart_ScatterThingsNearPlayerStart">
					<def>ScatterThingsNearPlayerStart</def>
					<thingDef>WoodLog</thingDef>
					<count>400</count>
				</li>      

				<!-- Scatter some things anywhere -->
				<li Class="ScenPart_ScatterThingsAnywhere">
					<def>ScatterThingsAnywhere</def>
					<thingDef>Steel</thingDef>
					<count>500</count>
				</li>
				<li Class="ScenPart_ScatterThingsAnywhere">
					<def>ScatterThingsAnywhere</def>
					<thingDef>MealSurvivalPack</thingDef>
					<count>10</count>
				</li>

			</parts>
		</scenario>
	</ScenarioDef>

</Defs>